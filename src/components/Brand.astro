---
import Rheem from "./Brand.Rheem.astro";
import Tempblue from "./Brand.Tempblue.astro";

const additionalBrands = [
  {
    name: "Comfort Star",
    logo: "/brands/comfort_star_logo.webp",
    tagline: "Alta eficiencia energética",
    logoHeight: "h-10"
  },
  {
    name: "Midea",
    logo: "/brands/midea_logo.webp",
    tagline: "Smart Home Innovation",
    logoHeight: "h-10"
  },
  {
    name: "Soler & Palau",
    logo: "/brands/soler_palau_logo.webp",
    tagline: "Expertos en ventilación",
    logoHeight: "h-14"
  }
];
---

<section
  class="relative bg-white dark:bg-gradient-to-br dark:from-black dark:to-neutral-900 text-neutral-900 dark:text-white transition-colors duration-300 py-12"
>
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6">
    <div class="text-center mb-16">
      <span class="text-blue-600 dark:text-blue-400 font-medium mb-2 block">
        Ahora Somos
      </span>
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white">
        Distribuidores Autorizados
      </h2>
    </div>
  </div>

  <Rheem />
  <Tempblue />

  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 mt-16">
    <!-- Header minimalista -->
    <div class="mb-8">
      <span class="text-xs font-medium text-neutral-500 dark:text-neutral-400 tracking-wider">
        OTRAS MARCAS PREMIUM
      </span>
    </div>

    <!-- Grid moderno de marcas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {additionalBrands.map((brand) => (
        <div class="group cursor-pointer">
          <div class="relative bg-neutral-50 dark:bg-white/[0.02] rounded-2xl p-6 h-full transition-all duration-300 hover:bg-white dark:hover:bg-white/[0.04] border border-transparent hover:border-neutral-200 dark:hover:border-white/[0.1] hover:shadow-sm">
            
            <div class="flex items-center justify-center h-16 mb-4">
              <img
                src={brand.logo}
                alt={brand.name}
                class={`${brand.logoHeight} object-contain opacity-90 group-hover:opacity-100 transition-all duration-300 dark:invert dark:brightness-200 dark:contrast-0 dark:group-hover:brightness-200`}
              />
            </div>

            <!-- Tagline con animación -->
            <div class="text-center">
              <p class="text-sm text-neutral-600 dark:text-neutral-400 group-hover:text-neutral-900 dark:group-hover:text-white transition-colors duration-300">
                {brand.tagline}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Marca de agua sutil -->
    <div class="mt-8 flex justify-center">
      <span class="text-[10px] uppercase tracking-widest text-neutral-400 dark:text-neutral-600">
        Alaska Cool, S.A.
      </span>
    </div>
  </div>
</section>

<style>
  .bg-grid-neutral-900 {
    background-size: 40px 40px;
    background-image: linear-gradient(
        to right,
        rgb(23 23 23 / 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgb(23 23 23 / 0.1) 1px, transparent 1px);
  }

  .bg-grid-white {
    background-size: 40px 40px;
    background-image: linear-gradient(
        to right,
        rgb(255 255 255 / 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgb(255 255 255 / 0.1) 1px, transparent 1px);
  }
</style>