---
const brand = {
  name: "TEMPBLUE",
  image: "/brands/tempblue_logo.webp",
  description: "Tecnología inteligente en climatización",
  highlight: "Distribuidor Autorizado Oficial",
  highlightDetails: "Servicio técnico especializado",
  details: [
    "Smart Control integrado",
    "Certificación energética A+++",
    "Soporte técnico 24/7",
    "Garantía extendida",
  ],
};
---

<section
  class="relative bg-white dark:bg-gradient-to-br dark:from-black dark:to-neutral-900 text-neutral-900 dark:text-white transition-colors duration-300"
>
  <div
    class="absolute inset-x-0 bottom-0 h-px bg-gradient-to-r from-transparent via-neutral-200 dark:via-neutral-800 to-transparent"
  >
  </div>

  <div
    class="absolute inset-0 pointer-events-none isolate overflow-hidden dark:block hidden"
  >
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-green-500/10 rounded-full blur-[100px] -translate-y-1/2 -z-10"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 lg:px-8 py-12">
    <div class="flex flex-col lg:flex-row lg:items-center">
      <div class="lg:w-5/12 space-y-6">
        <div class="space-y-4">
          <div
            class="inline-flex items-center gap-2 px-2.5 py-1.5 rounded-full bg-neutral-50 dark:bg-white/5 border border-neutral-200 dark:border-white/10"
          >
            <div class="w-1 h-1 rounded-full bg-green-500"></div>
            <span
              class="text-xs font-medium tracking-wider text-neutral-600 dark:text-white/80"
            >
              {brand.highlight}
            </span>
          </div>

          <div class="space-y-3">
            <img src={brand.image} alt={brand.name} class="h-14 w-auto" />
            <p class="text-base text-neutral-600 dark:text-neutral-400">
              {brand.description}
            </p>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          {
            brand.details.map((detail) => (
              <div class="flex items-center gap-2">
                <div class="w-4 h-[1px] bg-gradient-to-r from-green-500 to-transparent" />
                <span class="text-sm text-neutral-600 dark:text-neutral-300">
                  {detail}
                </span>
              </div>
            ))
          }
        </div>

        <div class="flex items-center gap-4 pt-2">
          <button
            class="flex items-center gap-2 bg-gradient-to-r from-green-500 to-blue-600 text-white px-4 py-2 rounded-lg text-sm relative overflow-hidden group"
          >
            <span class="relative z-10">Explorar productos</span>
            <svg
              class="h-4 w-4 relative z-10 transform transition-transform group-hover:translate-x-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
            <div
              class="absolute inset-0 bg-gradient-to-r from-green-600 to-blue-700 opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
          </button>
          <button
            class="text-sm text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white transition-colors"
          >
            Contactar a ventas
          </button>
        </div>
      </div>

      <div class="lg:w-7/12 mt-8 lg:mt-0 lg:pl-16">
        <div class="relative aspect-[16/9] rounded-xl overflow-hidden group">
          <div
            class="absolute inset-0 bg-[radial-gradient(#94a3b8_1px,transparent_1px)] dark:bg-[radial-gradient(#4b5563_1px,transparent_1px)] [background-size:16px_16px] opacity-40 dark:opacity-50"
          >
          </div>
          <img
            src="/brands/ac-temp-blue.webp"
            alt={brand.name}
            class="w-full h-full object-contain relative z-10 transform transition-transform duration-500 group-hover:scale-[1.02]"
          />
        </div>
      </div>
    </div>
  </div>
</section>
