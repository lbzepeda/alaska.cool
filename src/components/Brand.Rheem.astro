---
const brand = {
  name: "RHEEM",
  image: "/brands/rheem_logo.webp",
  description: "La nueva era del confort",
  highlight: "Distribuidor Autorizado Oficial",
  highlightDetails: "Única empresa certificada en la región",
  details: [
    "Garantía oficial de fábrica",
    "Técnicos certificados Rheem",
    "Repuestos originales",
    "Soporte premium",
  ],
  stats: [{ label: "Años de experiencia", value: "50+" }],
};
---

<section
  class="relative bg-white dark:bg-gradient-to-br dark:from-black dark:to-neutral-900 text-neutral-900 dark:text-white transition-colors duration-300 py-8"
>
  <div
    class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-neutral-200 dark:via-neutral-800 to-transparent"
  >
  </div>
  <!-- Elemento decorativo de fondo estático menos intenso -->
  <div class="absolute inset-0 pointer-events-none isolate overflow-hidden">
    <!-- Aura roja principal - intensidad mínima -->
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-red-500/5 dark:bg-red-500/10 rounded-full blur-[120px] -translate-y-1/2 -z-10"
    >
    </div>
    <!-- Aura roja secundaria - intensidad mínima -->
    <div
      class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-red-600/3 dark:bg-red-600/5 rounded-full blur-[100px] -translate-y-1/2 -z-10"
    >
    </div>
    <!-- Aura azul inferior - intensidad mínima -->
    <div
      class="absolute bottom-0 right-1/4 w-[600px] h-[600px] bg-blue-500/2 dark:bg-blue-500/3 rounded-full blur-[100px] translate-y-1/2 -z-10"
    >
    </div>
  </div>

  <div class="max-w-[1200px] mx-auto px-4 sm:px-6">
    <!-- Header con badge y stats -->
    <div
      class="flex flex-col md:flex-row justify-between items-center md:items-center mb-8"
    >
      <div
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-neutral-100 dark:bg-white/5 border border-neutral-200 dark:border-white/10 backdrop-blur-sm"
      >
        <div class="w-1.5 h-1.5 rounded-full bg-red-500"></div>
        <span
          class="text-xs font-medium tracking-wider text-neutral-600 dark:text-white/80"
        >
          DISTRIBUIDOR AUTORIZADO OFICIAL
        </span>
      </div>

      <!-- Stats -->
      <div
        class="flex gap-6 mt-4 md:mt-0 w-full md:w-auto justify-center md:justify-end"
      >
        {
          brand.stats.map((stat) => (
            <div class="text-center md:text-right">
              <div class="text-xl font-semibold bg-gradient-to-r from-red-600 to-red-400 dark:from-red-500 dark:to-red-300 bg-clip-text text-transparent">
                {stat.value}
              </div>
              <div class="text-xs text-neutral-500 dark:text-neutral-400">
                {stat.label}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-center">
      <!-- Contenido Principal -->
      <div class="lg:col-span-2 space-y-6">
        <div class="flex items-center gap-4">
          <div class="relative">
            <img
              src={brand.image}
              alt={brand.name}
              class="w-12 h-12 relative z-10"
            />
          </div>
          <p class="text-xl text-neutral-600 dark:text-neutral-400 font-light">
            {brand.description}
          </p>
        </div>

        <div class="space-y-4">
          <div>
            <h3
              class="text-lg font-medium bg-gradient-to-r from-red-600 to-red-400 dark:from-red-500 dark:to-red-300 bg-clip-text text-transparent"
            >
              {brand.highlight}
            </h3>
            <p class="text-sm text-neutral-500 dark:text-neutral-400">
              {brand.highlightDetails}
            </p>
          </div>

          <div class="grid grid-cols-2 gap-3">
            {
              brand.details.map((detail) => (
                <div class="flex items-center gap-2 text-neutral-600 dark:text-neutral-300">
                  <div class="w-4 h-[1px] bg-gradient-to-r from-red-500 to-transparent" />
                  <span class="text-sm">{detail}</span>
                </div>
              ))
            }
          </div>

          <div class="flex items-center gap-4 pt-2">
            <button
              class="flex items-center gap-2 bg-gradient-to-r from-red-500 to-red-600 text-white px-4 py-2 rounded-lg backdrop-blur-sm text-sm relative overflow-hidden group"
            >
              <span class="relative z-10">Explorar productos</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 relative z-10 transform transition-transform group-hover:translate-x-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
              <div
                class="absolute inset-0 bg-gradient-to-r from-red-600 to-red-700 opacity-0 group-hover:opacity-100 transition-opacity"
              >
              </div>
            </button>
            <button
              class="text-sm text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white transition-colors duration-300"
            >
              Contactar a ventas
            </button>
          </div>
        </div>
      </div>

      <!-- Imagen Principal -->
      <div class="relative">
        <div class="relative z-10">
          <div
            class="aspect-[4/3] bg-gradient-to-br from-neutral-50 to-neutral-100 dark:from-neutral-900 dark:to-neutral-800 rounded-xl p-6 flex items-center justify-center border border-neutral-200 dark:border-white/5 relative overflow-hidden"
          >
            <div
              class="absolute inset-0 bg-grid-neutral-900/[0.02] dark:bg-grid-white/[0.02]"
            >
            </div>
            <img
              src="/brands/rheem.webp"
              alt={brand.name}
              class="w-full h-auto object-contain dark:filter dark:brightness-125 relative z-10"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .bg-grid-neutral-900 {
    background-size: 40px 40px;
    background-image: linear-gradient(
        to right,
        rgb(23 23 23 / 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgb(23 23 23 / 0.1) 1px, transparent 1px);
  }

  .bg-grid-white {
    background-size: 40px 40px;
    background-image: linear-gradient(
        to right,
        rgb(255 255 255 / 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgb(255 255 255 / 0.1) 1px, transparent 1px);
  }

  * {
    transition-property: color, background-color, border-color,
      text-decoration-color, fill, stroke;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
</style>
