---
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
import { getLanguageFromUrl, t } from '../i18n/utils';

const currentLang = getLanguageFromUrl(Astro.url);
---

<Layout title={`${t(currentLang, 'about.title')} - Alaska Cool`}>
  <main class="bg-white dark:bg-black">
    <!-- Hero Section -->
    <section class="pt-24 pb-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
        <h1 class="text-5xl md:text-7xl font-light tracking-tight text-slate-900 dark:text-white mb-8">
          Alaska Cool
        </h1>
        <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-400 font-light leading-relaxed max-w-3xl mx-auto">
          {t(currentLang, 'about.hero')}
        </p>
      </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-20 border-t border-slate-200 dark:border-slate-800">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="grid lg:grid-cols-2 gap-16">
          <div>
            <h2 class="text-3xl md:text-4xl font-light text-slate-900 dark:text-white mb-6">
              {t(currentLang, 'about.mission.title')}
            </h2>
            <p class="text-lg text-slate-600 dark:text-slate-400 leading-loose">
              {t(currentLang, 'about.mission.description')}
            </p>
          </div>
          
          <div>
            <h2 class="text-3xl md:text-4xl font-light text-slate-900 dark:text-white mb-6">
              {t(currentLang, 'about.vision.title')}
            </h2>
            <p class="text-lg text-slate-600 dark:text-slate-400 leading-loose">
              {t(currentLang, 'about.vision.description')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Values -->
    <section class="py-20 border-t border-slate-200 dark:border-slate-800">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <h2 class="text-3xl md:text-4xl font-light text-slate-900 dark:text-white mb-16 text-center">
          {t(currentLang, 'about.values.title')}
        </h2>
        
        <div class="grid md:grid-cols-3 gap-12">
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center">
              <svg class="w-7 h-7 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-medium text-slate-900 dark:text-white mb-3">
              {t(currentLang, 'about.values.excellence.title')}
            </h3>
            <p class="text-slate-600 dark:text-slate-400">
              {t(currentLang, 'about.values.excellence.description')}
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center">
              <svg class="w-7 h-7 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-medium text-slate-900 dark:text-white mb-3">
              {t(currentLang, 'about.values.innovation.title')}
            </h3>
            <p class="text-slate-600 dark:text-slate-400">
              {t(currentLang, 'about.values.innovation.description')}
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center">
              <svg class="w-7 h-7 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-medium text-slate-900 dark:text-white mb-3">
              {t(currentLang, 'about.values.trust.title')}
            </h3>
            <p class="text-slate-600 dark:text-slate-400">
              {t(currentLang, 'about.values.trust.description')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Story -->
    <section class="py-20 border-t border-slate-200 dark:border-slate-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6">
        <h2 class="text-3xl md:text-4xl font-light text-slate-900 dark:text-white mb-12 text-center">
          {t(currentLang, 'about.story.title')}
        </h2>
        
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <p class="text-lg text-slate-600 dark:text-slate-400 leading-loose mb-8">
            {t(currentLang, 'about.story.paragraph1')}
          </p>
          
          <p class="text-lg text-slate-600 dark:text-slate-400 leading-loose mb-8">
            {t(currentLang, 'about.story.paragraph2')}
          </p>
          
          <p class="text-lg text-slate-600 dark:text-slate-400 leading-loose">
            {t(currentLang, 'about.story.paragraph3')}
          </p>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-20 border-t border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-slate-900/50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <h2 class="text-3xl md:text-4xl font-light text-slate-900 dark:text-white mb-16 text-center">
          {t(currentLang, 'about.whyUs.title')}
        </h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-3xl font-light text-blue-600 dark:text-blue-400 mb-2">10+</div>
            <p class="text-slate-600 dark:text-slate-400">{t(currentLang, 'about.whyUs.experience')}</p>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-light text-blue-600 dark:text-blue-400 mb-2">5</div>
            <p class="text-slate-600 dark:text-slate-400">{t(currentLang, 'about.whyUs.brands')}</p>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-light text-blue-600 dark:text-blue-400 mb-2">100%</div>
            <p class="text-slate-600 dark:text-slate-400">{t(currentLang, 'about.whyUs.coverage')}</p>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-light text-blue-600 dark:text-blue-400 mb-2">1 a√±o</div>
            <p class="text-slate-600 dark:text-slate-400">{t(currentLang, 'about.whyUs.warranty')}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <Contact />
  </main>
</Layout>