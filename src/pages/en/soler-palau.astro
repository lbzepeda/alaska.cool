---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import { t } from '../../i18n/utils';
import { getLanguageFromUrl } from '../../i18n/utils';

const currentLang = getLanguageFromUrl(Astro.url);

const hero = {
  title: 'Soler & Palau',
  subtitle: 'Professional and Industrial Ventilation',
  description: 'World leader in ventilation systems. Extractors, industrial fans and professional HVAC solutions.',
  image: '/brands/soler_palau_hero.webp',
  alt: 'Soler & Palau - Professional ventilation systems'
};
---

<Layout 
  title="Soler & Palau - Professional Ventilation"
  description="Soler & Palau ventilation systems in Nicaragua. Industrial extractors, professional fans and HVAC solutions."
>
  <Hero 
    title={hero.title}
    subtitle={hero.subtitle}
    description={hero.description}
    image={hero.image}
    alt={hero.alt}
  />

  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
          Industrial and Professional Ventilation
        </h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Soler & Palau is a world leader in ventilation systems with over 70 years of experience. 
          We offer complete solutions for industrial, commercial and residential ventilation.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Industrial Extractors
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            High-efficiency extractors for industrial and commercial applications.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Centrifugal Fans
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            High-pressure fans for professional HVAC systems.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Duct Systems
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Ducts and accessories for complete ventilation systems.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">
        Contact us for more information
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
        Our technical team will help you find the perfect ventilation solution for your project.
      </p>
      <a 
        href="/en/contact" 
        class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors"
      >
        Contact Now
      </a>
    </div>
  </section>
</Layout>