---
const contactInfo = {
  phone: "+505 2224 3811",
  whatsapp: "+505 77726999",
  address: "Praderas del Doral IV etapa. 2da entrada 2c al sur 1c al este. Casa esquinera dos pisos # 662",
  emails: ["ventas@alaska-cool.com", "info@alaska-cool.com"]
};

const whatsappMessage = encodeURIComponent(
  "Hola, me gustaría recibir más información sobre sus productos y servicios de climatización. ¿Podrían ayudarme?"
);
---

<section id="contact" class="relative bg-[#FBFBFD] dark:bg-black py-16 overflow-hidden">
  
  <div class="relative max-w-[1200px] mx-auto px-4 sm:px-6">
    <div class="text-center max-w-xl mx-auto mb-12">
      <span class="text-blue-600 dark:text-blue-400 font-medium mb-2 block">
        Contáctanos
      </span>
      <h2 class="text-4xl md:text-3xl font-semibold text-slate-900 dark:text-white mb-4">
        Estamos Aquí Para Ayudarte
      </h2>
      <p class="text-slate-600 dark:text-slate-400 text-lg">
        Ponte en contacto con nuestro equipo de expertos
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
      <!-- Contact Information -->
      <div class="rounded-xl p-8 border border-gray-300/50 dark:border-slate-600/50">
        <h3 class="text-xl font-medium text-gray-900 dark:text-white mb-6">
          Información de Contacto
        </h3>
        
        <div class="space-y-6">
          <!-- Phone -->
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 bg-slate-100 dark:bg-slate-700 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-slate-600 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900 dark:text-white">Teléfono</h4>
              <a 
                href={`tel:${contactInfo.phone.replace(/\s/g, '')}`}
                class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
              >
                {contactInfo.phone}
              </a>
            </div>
          </div>

          <!-- WhatsApp -->
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 bg-slate-100 dark:bg-slate-700 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-slate-600 dark:text-slate-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.087"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900 dark:text-white">WhatsApp</h4>
              <a 
                href={`https://wa.me/${contactInfo.whatsapp.replace(/\s|\+/g, '')}?text=${whatsappMessage}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 dark:text-gray-300 hover:text-green-600 dark:hover:text-green-400 transition-colors"
              >
                {contactInfo.whatsapp}
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-slate-100 dark:bg-slate-700 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-slate-600 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900 dark:text-white mb-1">Email</h4>
              <div class="space-y-1">
                {contactInfo.emails.map((email) => (
                  <a 
                    href={`mailto:${email}`}
                    class="block text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors"
                  >
                    {email}
                  </a>
                ))}
              </div>
            </div>
          </div>

          <!-- Address -->
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-slate-100 dark:bg-slate-700 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-slate-600 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900 dark:text-white mb-1">Ubicación</h4>
              <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-2">
                {contactInfo.address}
              </p>
              <a 
                href="https://www.google.com/maps/place/12°07'50.0%22N+86°11'18.3%22W/@12.130547,-86.1909909,17z/data=!3m1!4b1!4m4!3m3!8m2!3d12.130547!4d-86.188416?entry=ttu&g_ep=EgoyMDI1MDcyMi4wIKXMDSoASAFQAw%3D%3D"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
                Ver en Google Maps
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Map -->
      <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm rounded-xl overflow-hidden shadow-sm border border-gray-100/50 dark:border-slate-700/50 relative group cursor-pointer">
        <a 
          href="https://www.google.com/maps/place/12°07'50.0%22N+86°11'18.3%22W/@12.130547,-86.1909909,17z/data=!3m1!4b1!4m4!3m3!8m2!3d12.130547!4d-86.188416?entry=ttu&g_ep=EgoyMDI1MDcyMi4wIKXMDSoASAFQAw%3D%3D"
          target="_blank"
          rel="noopener noreferrer"
          class="absolute inset-0 z-10 flex items-center justify-center bg-black/0 hover:bg-black/10 transition-colors"
        >
          <div class="opacity-0 group-hover:opacity-100 transition-opacity bg-white/90 dark:bg-slate-800/90 rounded-lg px-4 py-2 backdrop-blur-sm">
            <span class="text-sm font-medium text-gray-900 dark:text-white flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              Abrir en Google Maps
            </span>
          </div>
        </a>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3845.6847458246586!2d-86.1909909!3d12.130547!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f73fb8c7e8e8e8f%3A0x8e8e8e8e8e8e8e8e!2s12%C2%B007'50.0%22N%2086%C2%B011'18.3%22W!5e0!3m2!1ses!2sni!4v1691234567890!5m2!1ses!2sni"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="h-full min-h-[400px] pointer-events-none"
        ></iframe>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-3 justify-center items-center">
      <a 
        href={`https://wa.me/${contactInfo.whatsapp.replace(/\s|\+/g, '')}?text=${whatsappMessage}`}
        target="_blank"
        rel="noopener noreferrer"
        class="group flex items-center justify-center gap-2 w-full sm:w-auto px-5 py-3 sm:py-2.5 text-sm font-medium text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 border border-green-300 dark:border-green-500 hover:border-green-400 dark:hover:border-green-400 rounded-lg transition-all duration-200 hover:shadow-sm"
      >
        <svg class="w-4 h-4 transition-transform group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.087"/>
        </svg>
        WhatsApp
      </a>
      <a 
        href={`tel:${contactInfo.phone.replace(/\s/g, '')}`}
        class="group flex items-center justify-center gap-2 w-full sm:w-auto px-5 py-3 sm:py-2.5 text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 border border-blue-300 dark:border-blue-500 hover:border-blue-400 dark:hover:border-blue-400 rounded-lg transition-all duration-200 hover:shadow-sm"
      >
        <svg class="w-4 h-4 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        Llamar
      </a>
    </div>
  </div>
</section>