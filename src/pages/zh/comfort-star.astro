---
import BrandPage from "../../components/BrandDetail/BrandPage.astro";
import Layout from "../../layouts/Layout.astro";
import { brandsData } from "../../shared/brandsData";
import { getLanguageFromUrl, t } from '../../i18n/utils';
import { getBrandDataWithTranslations } from '../../utils/brandTranslations';

const currentLang = getLanguageFromUrl(Astro.url);
const comfortstarData = getBrandDataWithTranslations(brandsData.comfortStar, 'comfortStar', currentLang);
---

<Layout
  title={t(currentLang, 'pages.comfortstar.title')}
  description={t(currentLang, 'pages.comfortstar.description')}
  image="https://alaska-cool.com/brands/comfortstar-social.webp"
>
  <BrandPage brand={comfortstarData} brandKey="comfortStar" />
</Layout>
