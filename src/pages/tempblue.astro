---
// src/pages/tempblue.astro
import BrandPage from "../components/BrandDetail/BrandPage.astro";
import Layout from "../layouts/Layout.astro";
import { brandsData } from "../shared/brandsData";
import { getLanguageFromUrl, t } from '../i18n/utils';

const currentLang = getLanguageFromUrl(Astro.url);
const tempblueData = brandsData.tempBlue;
---

<Layout
  title={t(currentLang, 'pages.tempblue.title')}
  description="Tempblue Nicaragua: Especialistas en aires acondicionados residenciales y comerciales. Ofrecemos equipos con tecnología Inverter, alta eficiencia energética y servicio de instalación profesional. Distribuidor autorizado en Nicaragua con garantía y soporte técnico."
  image="/brands/tempblue-social.webp"
>
  <BrandPage brand={tempblueData} brandKey="tempBlue" />
</Layout>
