---
// src/pages/tempblue.astro
import BrandPage from "../components/BrandDetail/BrandPage.astro";
import Layout from "../layouts/Layout.astro";
import { brandsData } from "../shared/brandsData";
import { getLanguageFromUrl, t } from '../i18n/utils';
import { getBrandDataWithTranslations } from '../utils/brandTranslations';

const currentLang = getLanguageFromUrl(Astro.url);
const tempblueData = getBrandDataWithTranslations(brandsData.tempBlue, 'tempBlue', currentLang);
---

<Layout
  title={t(currentLang, 'pages.tempblue.title')}
  description={t(currentLang, 'pages.tempblue.description')}
  image="https://alaska-cool.com/brands/tempblue-social.webp"
>
  <BrandPage brand={tempblueData} brandKey="tempBlue" />
</Layout>
