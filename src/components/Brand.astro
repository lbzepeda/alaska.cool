---
const additionalBrands = [
  {
    name: "Tempblue",
    logo: "/brands/tempblue_logo.webp",
    tagline: "Soluciones de Confort",
    logoHeight: "h-16 md:h-16 h-10",
    gridClass: "col-span-2 md:col-span-3",
    url: "/tempblue",
    logoStyle: "opacity-70 brightness-200 contrast-0",
  },
  {
    name: "Rheem",
    logo: "/brands/rheem_logo.webp",
    tagline: "Innovación en Climatización",
    logoHeight: "h-16 md:h-16 h-10",
    gridClass: "col-span-2 md:col-span-3",
    url: "/rheem",
    logoStyle: "opacity-70 brightness-200 contrast-0",
  },
  {
    name: "Comfort Star",
    logo: "/brands/comfort_star_logo.webp",
    tagline: "Alta eficiencia energética",
    logoHeight: "h-10",
    gridClass: "col-span-2 md:col-span-2",
    logoStyle: "dark:invert opacity-70 brightness-200 contrast-0",
  },
  {
    name: "Midea",
    logo: "/brands/midea_logo.webp",
    tagline: "Smart Home Innovation",
    logoHeight: "h-10",
    gridClass: "col-span-2 md:col-span-2",
    logoStyle: "opacity-70 brightness-200 contrast-0",
  },
  {
    name: "Soler & Palau",
    logo: "/brands/soler_palau_logo.webp",
    tagline: "Expertos en ventilación",
    logoHeight: "h-14",
    gridClass: "col-span-2 md:col-span-2",
    logoStyle: "opacity-70 brightness-200 contrast-0",
  },
];
---

<section
  class="relative bg-white dark:bg-gradient-to-br dark:from-black dark:to-neutral-900 text-neutral-900 dark:text-white transition-colors duration-300 py-12"
>
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6">
    <div class="text-center mb-16">
      <span class="text-blue-600 dark:text-blue-400 font-medium mb-2 block">
        Ahora Somos
      </span>
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white">
        Distribuidores Autorizados
      </h2>
    </div>
  </div>

  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 mt-16">
    <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
      {
        additionalBrands.map((brand) => (
          <a
            href={brand.url || "#"}
            class={`${brand.gridClass} group relative focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 rounded-2xl`}
            aria-label={`Ver más sobre ${brand.name}`}
          >
            <div class="relative bg-neutral-50 dark:bg-white/[0.02] rounded-2xl p-6 h-full transition-all duration-300 hover:bg-white dark:hover:bg-white/[0.04] border border-transparent hover:border-neutral-200 dark:hover:border-white/[0.1] hover:shadow-lg">
              <div class="flex items-center justify-center h-16 md:h-20 mb-4">
                <img
                  src={brand.logo}
                  alt={brand.name}
                  class={`${brand.logoHeight} ${brand.logoStyle} object-contain transition-all duration-300 
                  grayscale group-hover:grayscale-0
                  group-hover:opacity-100 group-hover:brightness-100 group-hover:contrast-100
                  dark:brightness-200 dark:contrast-0 dark:group-hover:brightness-200`}
                />
              </div>

              <div class="text-center">
                <p class="text-sm text-neutral-600 dark:text-neutral-400 group-hover:text-neutral-900 dark:group-hover:text-white transition-colors duration-300">
                  {brand.tagline}
                </p>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
