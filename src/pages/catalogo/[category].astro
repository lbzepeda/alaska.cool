---
import ProductGrid from "../../components/Catalog/ProductGrid.astro";
import Layout from "../../layouts/Layout.astro";
import type { Category } from "../../shared/brandsData";

export function getStaticPaths() {
  return [
    { params: { category: "residential" } },
    { params: { category: "industrial" } },
    { params: { category: "fan" } },
  ];
}

const { category } = Astro.params;

const categoryTitles = {
  residential: "Aires Acondicionados Residenciales",
  industrial: "Aires Acondicionados Industriales y Comerciales",
  fan: "Ventilación Forzada Industrial",
};
---

<Layout
  title={categoryTitles[category as Category]}
  description="Catálogo de productos de climatización"
>
  <section class="py-16">
    <div class="text-center max-w-xl mx-auto mb-12">
      <h1 class="text-4xl font-semibold mb-4">
        {categoryTitles[category as Category]}
      </h1>
      <p class="text-slate-600 dark:text-slate-400">
        Encuentra el equipo perfecto para tus necesidades
      </p>
    </div>

    <ProductGrid defaultCategory={category as Category} />
  </section>
</Layout>
