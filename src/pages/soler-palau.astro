---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import { t } from '../i18n/utils';
import { getLanguageFromUrl } from '../i18n/utils';

const currentLang = getLanguageFromUrl(Astro.url);

const hero = {
  title: 'Soler & Palau',
  subtitle: 'Ventilación profesional e industrial',
  description: 'Líder mundial en sistemas de ventilación. Extractores, ventiladores industriales y soluciones de climatización profesional.',
  image: '/brands/soler_palau_hero.webp',
  alt: 'Soler & Palau - Sistemas de ventilación profesional'
};
---

<Layout 
  title="Soler & Palau - Ventilación Profesional"
  description="Sistemas de ventilación Soler & Palau en Nicaragua. Extractores industriales, ventiladores profesionales y soluciones de climatización."
>
  <Hero 
    title={hero.title}
    subtitle={hero.subtitle}
    description={hero.description}
    image={hero.image}
    alt={hero.alt}
  />

  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
          Ventilación Industrial y Profesional
        </h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Soler & Palau es líder mundial en sistemas de ventilación con más de 70 años de experiencia. 
          Ofrecemos soluciones completas para ventilación industrial, comercial y residencial.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Extractores Industriales
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Extractores de alta eficiencia para aplicaciones industriales y comerciales.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Ventiladores Centrífugos
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Ventiladores de alta presión para sistemas de climatización profesional.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Sistemas de Conductos
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Conductos y accesorios para sistemas de ventilación completos.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">
        Contáctanos para más información
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
        Nuestro equipo técnico te ayudará a encontrar la solución de ventilación perfecta para tu proyecto.
      </p>
      <a 
        href="/contact" 
        class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors"
      >
        Contactar Ahora
      </a>
    </div>
  </section>
</Layout>