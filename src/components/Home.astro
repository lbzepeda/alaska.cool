const IMAGES = {
  residential: {
    src: "../assets/residencial_ac_preview.webp",
    width: 800,
    height: 600,
    placeholder: "data:image/webp;base64,...",
  },
  industrial: {
    src: "../assets/industrial_comercial_preview.webp",
    width: 800,
    height: 600,
    placeholder: "data:image/webp;base64,...",
  },
  fan: {
