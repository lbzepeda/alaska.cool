---
import ProductGrid from "../../../components/Catalog/ProductGrid.astro";
import Layout from "../../../layouts/Layout.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import { getLanguageFromUrl, t } from '../../../i18n/utils';

const currentLang = getLanguageFromUrl(Astro.url);
---

<Layout
  title={t(currentLang, 'pages.catalog.title')}
  description={t(currentLang, 'pages.catalog.description')}
>
  <section class="py-16">
    <Breadcrumbs />
    <div class="text-center max-w-xl mx-auto mb-12">
      <h1 class="text-4xl font-semibold mb-4">
        {t(currentLang, 'catalog.title')}
      </h1>
      <p class="text-slate-600 dark:text-slate-400">
        {t(currentLang, 'catalog.subtitle')}
      </p>
    </div>

    <ProductGrid />
  </section>
</Layout>