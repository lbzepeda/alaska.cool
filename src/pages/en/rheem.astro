---
// src/pages/rheem.astro
import BrandPage from "../../components/BrandDetail/BrandPage.astro";
import Layout from "../../layouts/Layout.astro";
import { brandsData } from "../../shared/brandsData";
import { getLanguageFromUrl, t } from '../../i18n/utils';
import { getBrandDataWithTranslations } from '../../utils/brandTranslations';

const currentLang = getLanguageFromUrl(Astro.url);
const rheemData = getBrandDataWithTranslations(brandsData.rheem, 'rheem', currentLang);
---

<Layout
  title={t(currentLang, 'pages.rheem.title')}
  description={t(currentLang, 'pages.rheem.description')}
  image="/brands/rheem-social.webp"
>
  <BrandPage brand={rheemData} brandKey="rheem" />
</Layout>
